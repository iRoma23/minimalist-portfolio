---
import Wrapper from "@/components/Wrapper.astro";
import { work } from "@/data/cv.json";

const months = [
  "Enero",
  "Febrero",
  "Marzo",
  "Abril",
  "Mayo",
  "Junio",
  "Julio",
  "Agosto",
  "Septiembre",
  "Octubre",
  "Noviembre",
  "Diciembre",
];

const getStringDate = (d: string | null): string => {
  if (d === null) return "Presente";

  const date = new Date(d);

  const indexMonth = date.getUTCMonth();

  const month = months[indexMonth];
  const year = date.getUTCFullYear();

  return month + " " + year;
};
---

<Wrapper title="Experiencia laboral">
  <ul>
    {
      work.map(({ name, position, startDate, endDate, summary }) => {
        const start = getStringDate(startDate);
        const end = getStringDate(endDate);

        return (
          <li>
            <article>
              <header>
                <div class="item-a">
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>

                <div class="item-b">
                  <time datetime={startDate}>{start}</time>
                  {" - "}
                  <time datetime={endDate}>{end}</time>
                </div>
              </header>
              <p>{summary}</p>
            </article>
          </li>
        );
      })
    }
  </ul>
</Wrapper>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  p {
    margin-top: 0.75rem;
  }

  header {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
    /* justify-content: space-between; */
  }

  h3,
  h4 {
    font-size: 1rem;
  }

  h4 {
    font-weight: 500;
    margin-left: 0.5rem;
  }

  .item-a {
    display: flex;
  }

  time {
    font-size: 0.75rem;
  }
</style>
