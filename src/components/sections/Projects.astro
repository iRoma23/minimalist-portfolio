---
import Wrapper from "@/components/Wrapper.astro";
import { projects } from "@/data/cv.json";
---

<Wrapper title="Proyectos">
  <ul>
    {
      projects.map(({ name, isActive, description, url, skills }) => {
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a
                    href={url}
                    target="_blank"
                    title={`Ver el proyecto ${name}`}
                  >
                    {name}
                  </a>
                </h3>
                {isActive && <span class="bullet">‚óè</span>}
              </header>
              <p>{description}</p>
              <footer>
                {skills.map((skill) => (
                  <span>{skill}</span>
                ))}
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Wrapper>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(18rem, 1fr));
    gap: 1rem;
  }

  article {
    height: 100%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    border: 0.125rem solid #ddd;
    border-radius: 0.5rem;
    padding: 0.75rem;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    flex-basis: 100%;
  }

  header {
    display: flex;
    gap: 0.5rem;
  }

  h3 {
    font-size: 1rem;
  }

  a {
    color: #000;
  }

  p {
    font-size: 0.75rem;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  footer span {
    background-color: #eee;
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
    font-size: 0.625rem;
    letter-spacing: 0.0625rem;
    font-weight: 700;
  }

  .bullet {
    color: rgb(12, 184, 63);
    animation-name: flicker;
    animation-duration: 3s;
    animation-timing-function: ease;
    animation-iteration-count: infinite;
  }

  @keyframes flicker {
    0% {
      opacity: 1;
    }
    50% {
      opacity: 0.125;
    }
    100% {
      opacity: 1;
    }
  }
</style>
