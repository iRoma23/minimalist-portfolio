---
import Layout from "@/layouts/Layout.astro";
import Hero from "@/components/sections/Hero.astro";
import About from "@/components/sections/About.astro";
import Work from "@/components/sections/Expiriences.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <Hero />
    <About />
    <Work />
  </main>
</Layout>

<style>
  main {
    padding: 1.25rem;
  }

  @media (width >= 640px) {
    main {
      padding: 1.5rem;
    }
  }

  @media (width >= 768px) {
    main {
      padding: 2rem;
    }
  }

  @media (width >= 1024) {
    main {
      padding: 3rem;
    }
  }

  @media (width >= 1280) {
    main {
      padding: 4rem;
    }
  }
</style>
